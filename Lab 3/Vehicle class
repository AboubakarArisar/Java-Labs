import java.util.Scanner;
class Vehicle
{
    int noOfSeats;
    int noOfWheels;
    void display()
    {
        System.out.println("No of seats : "+noOfSeats);
        System.out.println("No of wheels : "+noOfWheels);
    }
}
public class Vehicles {
    public static void main(String[] args)
    {
        Scanner sc = new Scanner(System.in);
        Vehicle Bike = new Vehicle();
        Vehicle Car = new Vehicle();
        System.out.print("Enter no of seats in Bike : ");
        Bike.noOfSeats = sc.nextInt();
        System.out.print("Enter no of wheels in Bike : ");
        Bike.noOfWheels = sc.nextInt();
        System.out.println();
        System.out.print("Enter no of seats in Car : ");
        Car.noOfSeats = sc.nextInt();
        System.out.print("Enter no of wheels in Car : ");
        Car.noOfWheels = sc.nextInt();
        System.out.println();
        System.out.println("======== Data of Bike =========");
        Bike.display();
        System.out.println();
        System.out.println("======== Data of Car ==========");
        Car.display();
    }

}
